    <!-- delete products -->
    <script>
        function deleteProductConfirmation(element) {
            const url = element.href;
            swal({
                title: "Are you sure?",
                text: "Once deleted, you will not be able to recover this product!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
            .then((willDelete) => {
                if (willDelete) {
                    window.location.href = url;
                } else {
                    swal("Your product is safe!");
                }
            });
        }
    </script>

</body>


