<%- include("layouts/header") %>


<h1 class="text-center text-light my-3">Add Banner</h1>
    <h3  style="color: red;text-align: center;" ><%=message%></h3>
     <form action="/admin/add-Banners" method="post" style="margin-left: 15%;width: 50%;"  enctype="multipart/form-data" >
        <fieldset>
            <!-- Text input-->
    
            
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="product_name">Name</label>
              <br>
              <input id="product_name" name="bName" placeholder="Name" class="form-control input-md highlight" required type="text">
                
                    <!-- Text input-->
                <label class="col-md-4 control-label" for="product_name">Description</label>
                <br>
                <input id="product_name" name="bDescription" placeholder="Enter Description" class="form-control input-md highlight" required type="text">
                  
             <!-- File Button --> 
                <label for="filebutton">Choose image</label>
                <br>
                <br>
                <input id="filebutton" name="bImage" class="input-file" type="file" required multiple>
                
            <!-- Button -->
            <div style="margin-left: 85%;" class="my-3">
                <button type="submit" id="singlebutton" name="singlebutton" class="btn btn-success" >+Add</button>
                 <a href="/admin/banner"><button type="button" id="singlebutton" name="singlebutton" class="btn btn-outline-success mx-3">Go back</button></a>
            </div>
           
        </fieldset>
     </form>
           
     
